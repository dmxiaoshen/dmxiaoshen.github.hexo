<% if(post.categories && post.categories.length){ %>
	<% post.categories.each(function(item){ %>
		<% if(item.name==theme.categorie1){ %>
			<article id="<%= post.layout %>-<%= post.slug %>" class="post post_index">						
			<header class="entry-header">
				<%- partial('post/title_index', {class_name: 'article-title'}) %>
			</header>	
			</article>
		<% } %>
	<% }); %>
<% } %>
