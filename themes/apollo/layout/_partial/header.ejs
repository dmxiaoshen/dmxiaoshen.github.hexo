<div class="mobile-nav-panel">
	<i class="icon-reorder icon-large"></i>
</div>
<header id="header">
	<h1 class="blog-title">
		<a href="<%- config.root %>"><%= config.title %></a>
	</h1>	
	<!--<div style="display:inline-block;float:left;margin:25px 30px;font-size:90%;color:#cd3333;font-weight:bolder;"><%= config.subtitle %></div>-->
	<nav class="nav">
		<ul>
			<% for (var i in theme.menu){ %>
			<% if(i == theme.homepage){ %>
			<li class="current"><a href="<%- theme.menu[i] %>">
				<%= i %>
			<% } %>			
			</a></li><% } %>			
				<% if (site.categories.length){ %>
			<% site.categories.sort('name').each(function(item){ %>
  <% if(item.name==theme.categorie2){ %>
   <li><a href="<%- config.root %><%- item.path %>"><%= item.name %></a></li>
   <%} %>
  <% }); %>
  <% } %>
  <% for (var i in theme.menu){ %>
			<% if(i != theme.homepage){ %>
			<li><a href="<%- theme.menu[i] %>">
				<%= i %>
			<% } %>
			</a></li><% } %>
		</ul>
	</nav>
</header>